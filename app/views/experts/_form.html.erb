
<%= simple_form_for(@expert) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :username %>
    <%= f.input :github_account %>
    <%= f.input :twitter %>
    <%= f.input :cv %>
    <%= f.input :website_portfolio %>
    <%= f.input :bio %>
    <%= f.input :idendity_number %>
    <%= f.input :idendity_photo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
